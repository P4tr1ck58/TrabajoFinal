@model PracticaCampoFinal.Models.Login

<h2>Iniciar Sesión</h2>

<form asp-action="Login" method="post">
    <div class="form-group">
        <label asp-for="Name_Usuario"></label>
        <input asp-for="Name_Usuario" class="form-control" />
        <span asp-validation-for="Name_Usuario" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Contra_Usuario"></label>
        <input asp-for="Contra_Usuario" type="password" class="form-control" />
        <span asp-validation-for="Contra_Usuario" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Ingresar</button>
</form>