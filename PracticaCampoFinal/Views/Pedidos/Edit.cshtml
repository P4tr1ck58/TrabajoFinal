@model PracticaCampoFinal.Models.Pedido

<h2>Editar Pedido</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id_Pedido" />
    <div class="form-group">
        <label asp-for="Id_Cliente"></label>
        <select asp-for="Id_Cliente" class="form-control" asp-items="ViewBag.Id_Cliente"></select>
        <span asp-validation-for="Id_Cliente" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Estado_Pedido"></label>
        <input asp-for="Estado_Pedido" class="form-control" />
        <span asp-validation-for="Estado_Pedido" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
</form>