@model PracticaCampoFinal.Models.Pedido

<h2>Eliminar Pedido</h2>

<h4>¿Desea eliminar este pedido?</h4>
<div>
    <strong>Cliente:</strong> @Model.Cliente?.Name_Cliente<br />
    <strong>Fecha:</strong> @Model.Fecha_Pedido<br />
    <strong>Estado:</strong> @Model.Estado_Pedido
</div>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="Id_Pedido" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>