@model PracticaCampoFinal.Models.Usuario

<h2>Editar Usuario</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id_Usuario" />
    <div class="form-group">
        <label asp-for="Name_Usuario"></label>
        <input asp-for="Name_Usuario" class="form-control" />
        <span asp-validation-for="Name_Usuario" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Contra_Usuario"></label>
        <input asp-for="Contra_Usuario" class="form-control" />
        <span asp-validation-for="Contra_Usuario" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
</form>
