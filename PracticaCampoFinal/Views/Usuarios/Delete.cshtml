@model PracticaCampoFinal.Models.Usuario

<h2>Eliminar Usuario</h2>

<h4>¿Estás seguro de que deseas eliminar este usuario?</h4>
<div>
    <strong>Nombre:</strong> @Model.Name_Usuario<br />
    <strong>Contraseña:</strong> @Model.Contra_Usuario
</div>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="Id_Usuario" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
