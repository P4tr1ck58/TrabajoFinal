@model PracticaCampoFinal.Models.Usuario

@{
    ViewData["Title"] = "Registro de Usuario";
}

<h2>Registro de Usuario</h2>

<form asp-action="Register" method="post">
    <div class="form-group mb-3">
        <label asp-for="Name_Usuario" class="form-label"></label>
        <input asp-for="Name_Usuario" class="form-control" />
        <span asp-validation-for="Name_Usuario" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Contra_Usuario" class="form-label"></label>
        <input asp-for="Contra_Usuario" class="form-control" type="password" />
        <span asp-validation-for="Contra_Usuario" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Registrar</button>
    <a asp-action="Login" class="btn btn-secondary">Volver al Login</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}