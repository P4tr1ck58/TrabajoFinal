@model PracticaCampoFinal.Models.Login

@{
    ViewData["Title"] = "Iniciar Sesión";
}

<h2>Iniciar Sesión</h2>

<form asp-action="Login" method="post">
    <div class="form-group mb-3">
        <label asp-for="Name_Usuario" class="form-label"></label>
        <input asp-for="Name_Usuario" class="form-control" />
        <span asp-validation-for="Name_Usuario" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Contra_Usuario" class="form-label"></label>
        <input asp-for="Contra_Usuario" class="form-control" type="password" />
        <span asp-validation-for="Contra_Usuario" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Ingresar</button>
</form>

<div class="mt-3">
    ¿No tienes una cuenta?
    <a asp-controller="Auntenticacion" asp-action="Register" class="btn btn-link">Regístrate aquí</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}